---
import BaseLayout from '@/layouts/BaseLayout.astro';
import Header from '@/components/header.astro';
import Footer from '@/components/footer.astro';
---

<BaseLayout
  title="404 - dgdgdgdg"
  description="お探しのページは見つかりませんでした。URLの誤りや移動・削除の可能性があります。トップページへお戻りください。"
>
  <Fragment slot="head">
    <meta name="robots" content="noindex, nofollow" />
  </Fragment>
  <Header pageName="404" />
  <main>
    <section class="not-found">
      <h2 class="error-code">404</h2>
      <p class="not-found-message">お探しのページは見つかりませんでした</p>
      <p class="not-found-sub">ページが移動・削除されたか、URLが間違っている可能性があります。</p>
      <a href="/" class="back-link">
        <span class="back-arrow">
          <svg
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="2"
            stroke-linecap="round"
            stroke-linejoin="round"
          >
            <line x1="19" y1="12" x2="5" y2="12"></line>
            <polyline points="12 19 5 12 12 5"></polyline>
          </svg>
        </span>
        <span>トップページへ戻る</span>
      </a>
    </section>
  </main>
  <Footer />
</BaseLayout>

<style lang="sass">
  @use '../styles/spacing' as *
  main
    background-color: var(--c-black)
    min-height: 100vh
    display: flex
    align-items: center
    justify-content: center
    padding: space(16) space(16) space(16)

  .not-found
    text-align: center
    display: flex
    flex-direction: column
    align-items: center

  .error-code
    color: var(--c-white)
    font-family: var(--font-heading)
    font-size: clamp(120px, 20vw, 240px)
    font-weight: var(--type-h1-weight)
    letter-spacing: 0.08em
    line-height: 1
    margin-bottom: space(8)

  .not-found-message
    color: var(--c-white)
    font-size: var(--type-h3-size)
    font-family: var(--font-ui)
    font-weight: var(--type-body-weight)
    letter-spacing: 0.06em
    margin-bottom: space(3)

  .not-found-sub
    color: var(--c-gray-500)
    font-size: var(--type-caption-size)
    line-height: var(--type-caption-line)
    letter-spacing: 0.04em
    margin-bottom: space(12)

  .back-link
    display: inline-flex
    align-items: center
    gap: space(3)
    padding: space(3) space(6)
    background: var(--c-white-a8)
    border: 1px solid var(--c-white-a8)
    border-radius: 100px
    text-decoration: none
    color: var(--c-white-a70)
    font-family: var(--font-ui)
    font-size: var(--type-caption-size)
    font-weight: var(--type-body-weight)
    line-height: var(--type-caption-line)
    letter-spacing: 0.06em
    transition: all 0.3s ease
    &:hover
      background: var(--c-white-a8)
      border-color: var(--c-accent-a40)
      color: var(--c-white)
      .back-arrow
        color: var(--c-accent)
        transform: translateX(-3px)

  .back-arrow
    width: 18px
    height: 18px
    display: flex
    align-items: center
    color: var(--c-white-a50)
    transition: all 0.3s ease
    svg
      width: 100%
      height: 100%
      display: block

  @media (max-width: 768px)
    main
      padding: space(16) space(6) space(16)

    .not-found-message
      font-size: var(--type-body-size)

    .not-found-sub
      font-size: var(--type-caption-size)
      margin-bottom: space(8)

    .back-link
      padding: space(3) space(6)
      font-size: var(--type-caption-size)
</style>
