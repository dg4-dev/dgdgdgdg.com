---
const navItems = [
  { label: 'Works', href: '/works' },
  { label: 'About', href: '/about' },
  { label: 'Contact', href: '/contact' },
];

const pathname = Astro.url.pathname.replace(/\/$/, '') || '/';
---

<footer>
  <div class="footer-inner">
    <div class="footer-top">
      <a href="/" class="footer-logo-link">
        <img src="/images/row-white.svg" alt="dgdgdgdg" class="footer-logo" />
      </a>
      <nav>
        <ul>
          {
            navItems.map((item) => (
              <li>
                <a href={item.href} class:list={[{ current: item.href.replace(/\/$/, '') === pathname }]}>
                  {item.label}
                </a>
              </li>
            ))
          }
        </ul>
      </nav>
    </div>
    <div class="footer-bottom">
      <p class="copyright">Â© 2021 - {new Date().getFullYear()} dgdgdgdg</p>
    </div>
  </div>
</footer>

<style lang="sass">
  @use '../styles/spacing' as *
  footer
    background-color: var(--c-black)
    padding: space(16) space(16) space(8)

  .footer-inner
    max-width: 1200px
    margin: space(0) auto
    display: flex
    flex-direction: column
    gap: space(12)

  .footer-top
    display: flex
    align-items: center
    justify-content: space-between

  .footer-logo-link
    display: flex
    align-items: center
    line-height: 0

  .footer-logo
    height: 28px
    width: auto
    opacity: 0.7
    transition: opacity 0.3s ease
    &:hover
      opacity: 1

  nav
    ul
      list-style: none
      margin: space(0)
      padding: space(0)
      display: flex
      gap: space(8)
      li
        a
          color: var(--c-white-a50)
          text-decoration: none
          font-family: 'DG4 Atomic Dot', sans-serif
          font-variation-settings: "RNDS" 0, "slnt" 0
          font-size: 16px
          font-weight: 400
          transition: color 0.3s ease
          &:hover
            color: var(--c-white)
          &.current
            color: var(--c-accent)
            font-weight: 900

  .footer-bottom
    border-top: 1px solid var(--c-white-a6)
    padding-top: space(6)

  .copyright
    color: var(--c-white-a30)
    font-size: 12px
    letter-spacing: 0.06em

  @media (max-width: 768px)
    footer
      padding: space(12) space(6) space(8)

    .footer-inner
      gap: space(8)

    .footer-top
      flex-direction: column
      gap: space(6)
      align-items: flex-start

    .footer-logo
      height: 22px

    nav
      ul
        gap: space(6)
        li
          a
            font-size: 12px

    .footer-bottom
      padding-top: space(5)

    .copyright
      font-size: 11px
</style>
